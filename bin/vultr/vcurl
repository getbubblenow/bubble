#
if [[ -z "${VULTR_API_KEY}" ]] ; then
  echo "VULTR_API_KEY not defined in environment"
  exit 1
fi

path=${1:?no path provided}
shift

curl ${@} -s -H "API-Key: ${VULTR_API_KEY}" https://api.vultr.com/v1/${path}
