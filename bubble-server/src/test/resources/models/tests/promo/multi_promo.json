        {"condition": "json[0].getType().name() === 'payment'"},
        {"condition": "_find(referringPaymentMethods, function(p) { return p.getUuid() === json[0].getPaymentMethod() && p.getPaymentMethodType().name() === 'credit' }) !== null"}
      ]
    }
  },

  {
